# API Configuration
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30

# Authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

