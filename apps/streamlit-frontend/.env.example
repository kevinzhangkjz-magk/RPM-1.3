WS_BASE_URL=ws://localhost:8000
WS_RECONNECT_INTERVAL=5

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_DEBUG_MODE=false

# Performance
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=10