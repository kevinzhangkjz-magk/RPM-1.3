# Renewable Portfolio Manager - Environment Variables Example
# Copy this file to .env and configure with your actual values

# API Configuration
API_BASE_URL=http://localhost:8000
WS_BASE_URL=ws://localhost:8000

# Database
DATABASE_URL=postgresql://user:password@localhost/rpm_db
REDSHIFT_URL=redshift://user:password@redshift-cluster.region.redshift.amazonaws.com:5439/database

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Financial Configuration (Sensitive - Do not commit actual values)
# Default PPA rate in $/MWh
DEFAULT_PPA_RATE=50.0

# Site-specific PPA rates (JSON format)
# Example: {"assembly_2": 48.50, "highland": 52.00, "big_river": 51.75}
SITE_PPA_RATES={}

# Alternative: Path to secure financial config file
# FINANCIAL_CONFIG_PATH=/etc/rpm/financial.json

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_WEBSOCKETS=false
ENABLE_EXPORT_API=true
ENABLE_RATE_LIMITING=true

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Cache Configuration
CACHE_TTL=300
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379

# User Permissions (for PPA rate visibility)
# Comma-separated list of user roles that can see full PPA rates
PPA_AUTHORIZED_ROLES=admin,finance_manager,executive